#include <stdio.h>
void countingSort(int arr[], int n)
{
    // finding range
    int min = arr[0];
    for (int i = 1; i < n; i++)
    {
        if (arr[i] < min)
            min = arr[i];
    }
    int max = arr[0];
    for (int i = 1; i < n; i++)
    {
        if (arr[i] > max)
            max = arr[i];
    }
    int count[max + 1];
    for (int i = 0; i < max + 1; i++)
        count[i] = 0;
    for (int i = 0; i < n; i++)
    {
        count[arr[i]]++;
    }
    // updating count array by giving position in index of count
    for (int i = 1; i < n; i++)
    {
        count[i] += count[i - 1];
    }
    // creating new Array
    int nums[n];
    for (int i = n - 1; i >= 0; i--)
    {
        nums[--count[arr[i]]] = arr[i];
    }
    // copying in original elements
    for (int i = 0; i < n; i++)
    {
        arr[i] = nums[i];
    }
}
void printarray(int arr[], int n)
{
    // int n = sizeof(arr) / sizeof(arr[0]);
    for (int i = 0; i < n; i++)
    {
        printf("%d ", arr[i]);
    }
}
int main()
{
    int arr[] = {4, 2, 5, 6, 7, 2, 9, 0, 3, 6, 6, 3, 8, 4, 9};
    int n = sizeof(arr) / sizeof(arr[0]);
    countingSort(arr, n);
    for (int i = 0; i < n; i++)
        printf("%d ", arr[i]);
}
